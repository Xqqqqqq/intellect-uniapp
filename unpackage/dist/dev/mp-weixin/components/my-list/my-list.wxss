.list-content-box {
  width: 100%;
  background-color: #FFFFFF;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  padding: 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
