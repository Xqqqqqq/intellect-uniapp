          box-shadow: 0px 2px 10px 0px rgba(108, 143, 197, 0.14);
  margin-bottom: 20rpx;
}
.list-content-box .content-box-left {
  width: 170rpx;
  height: 170rpx;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  overflow: hidden;
  margin-right: 30rpx;
}
.list-content-box .content-box-left image {
  width: 100%;
  height: 100%;
}
.list-content-box .content-box-right {
  width: 68%;
}
.list-content-box .content-box-right .box-right-title {
  color: #333333;
  font-weight: bold;
  font-size: 36rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
