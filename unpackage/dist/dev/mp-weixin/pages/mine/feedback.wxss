.feed {
  width: 100%;
  padding-bottom: 130rpx;
  box-sizing: border-box;
}
.feed .feed-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.feed .feed-top .feed-top-li {
  width: 33%;
  text-align: center;
  background-color: #FFFFFF;
  font-weight: bold;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 30rpx;
  margin-bottom: 0.5%;
}
.feed .feed-top .feed-top-li-click {
  background-color: #c0c0c0;
  color: #FFFFFF;
}
.feed .feed-content {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.feed .feed-content .feed-content-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.feed .feed-content .feed-content-text {
  border: 1px solid #D3D3D3;
  width: 100%;
  height: 400rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
  border-radius: 15rpx;
}
.feed .feed-content .feed-content-text textarea {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
}
.feed .feed-bottom {
  background-color: #FFFFFF;
  padding: 24rpx;
  box-sizing: border-box;
}
.feed .feed-bottom .feed-content-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.feed .feed-bottom .feed-content-ul {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.feed .feed-bottom .feed-content-ul image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-right: 7%;
  margin-bottom: 20rpx;
}
.feed .feed-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #2E3B67;
  position: fixed;
  left: 0;
  bottom: 0;
}

