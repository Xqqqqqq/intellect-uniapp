page {
  background-color: #f4f4f4;
}
.mine {
  width: 100%;
}
.mine .modal-text {
  width: 100%;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.mine .status_bar {
  height: 25px;
  width: 100%;
  background-color: #2E3B67;
  z-index: 999;
}
.mine .status_bar .top_view {
  height: 25px;
  width: 100%;
}
.mine .shadow-blur {
  position: relative;
}
.mine .shadow-blur::before {
  content: "";
  display: block;
  background: inherit;
  -webkit-filter: blur(10rpx);
          filter: blur(10rpx);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 10rpx;
  left: 10rpx;
  z-index: -1;
  opacity: 0.4;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  border-radius: inherit;
  -webkit-transform: scale(1, 1);
          transform: scale(1, 1);
}
.mine .title-box {
  width: 100%;
  display: flex;
  margin-top: 25px;
  justify-content: space-between;
  padding: 14rpx 24rpx;
  box-sizing: border-box;
  position: fixed;
  height: 82rpx;
  z-index: 999;
  top: 0;
  left: 0;
  background: linear-gradient(to right, #5e5cd8, #2E3B67);
}
.mine .title-box .title-box-name {
  font-size: 32rpx;
  color: white;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.mine .mine-top {
  width: 100%;
  padding: 150rpx 50rpx;
  box-sizing: border-box;
  background: linear-gradient(to right, #5e5cd8, #2E3B67);
  position: relative;
  display: flex;
  color: #FFFFFF;
}
.mine .mine-top .mine-top-left {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  margin-right: 30rpx;
}
.mine .mine-top .mine-top-left image {
  width: 100%;
  height: 100%;
}
.mine .mine-top .mine-top-right {
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.mine .mine-top .mine-top-right .top-right-name {
  font-weight: bold;
  font-size: 36rpx;
  max-width: 320rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mine .mine-top .mine-top-right .top-right-name image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.mine .mine-top .mine-top-right .top-right-date {
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  font-size: 24rpx;
  background-color: #e54d42;
  color: #fff;
}
.mine .mine-top .mine-top-right .top-right-btn {
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #8799a3;
  background-color: #e7ebed;
  width: 180rpx;
}
.mine .mine-top .mine-top-pos {
  border-radius: 50rpx 0 0 50rpx;
  position: absolute;
  top: 48%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 0;
  background-color: #FFFFFF;
  padding-left: 15rpx;
  padding-right: 10rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #f0ad4e;
  display: flex;
  font-weight: bold;
  font-size: 26rpx;
}
.mine .mine-top .mine-top-pos .top-pos-img {
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.mine .mine-content {
  border-radius: 25rpx;
  background-color: #FFFFFF;
  margin: auto;
  margin-top: -13%;
  width: 95%;
  display: flex;
  justify-content: space-around;
  z-index: 99;
  position: relative;
}
.mine .mine-content .mine-content-li {
  text-align: center;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.mine .mine-content .mine-content-li .content-li-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.mine .mine-content .mine-content-li .content-li-num {
  font-weight: bold;
  font-size: 45rpx;
  color: #333333;
}
.mine .mine-bottom {
  width: 95%;
  margin: auto;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  border-radius: 15rpx;
}
.mine .mine-bottom .mine-bottom-li {
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  border-bottom: 1px solid #F0F0F0;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.mine .mine-bottom .mine-bottom-li .bottom-li-left {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}
.mine .mine-bottom .mine-bottom-li .bottom-li-right {
  font-size: 30rpx;
  color: #666666;
}

