.activity {
  width: 100%;
}
.activity .activity-top {
  background-color: pink;
  padding: 80rpx;
  box-sizing: border-box;
  text-align: center;
}
.activity .activity-top .activity-top-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 30rpx;
}
.activity .activity-top .activity-top-input {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  line-height: 80rpx;
  height: 80rpx;
  margin-bottom: 40rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.activity .activity-top .activity-top-input input {
  flex: 1;
  font-size: 26rpx;
  padding-left: 20rpx;
  height: 100%;
  line-height: 80rpx;
  text-align: left;
}
.activity .activity-top .activity-top-input .top-input-btn {
  width: 200rpx;
  height: 100%;
  line-height: 80rpx;
  background-color: #f0ad4e;
  color: #FFFFFF;
  text-align: center;
}
.activity .activity-top .activity-top-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f0ad4e;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.activity .activity-content {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.activity .activity-content .activity-content-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  width: 100%;
}
.activity .activity-content .activity-content-li {
  box-shadow: 0px 2px 10px 0px rgba(108, 143, 197, 0.14);
  background-color: #FFFFFF;
}
.activity .activity-content .card-ul-li {
  width: 100%;
  box-shadow: 0px 2px 10px 0px rgba(108, 143, 197, 0.14);
  margin-bottom: 20rpx;
  display: flex;
  border: 2rpx solid #dd524d;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  height: 180rpx;
  position: relative;
}
.activity .activity-content .card-ul-li .card-ul-li-left {
  width: 180rpx;
  height: 100%;
  background-color: #dd524d;
  text-align: center;
  line-height: 180rpx;
  color: #FFFFFF;
  font-size: 70rpx;
}
.activity .activity-content .card-ul-li .card-ul-li-left text {
  font-size: 26rpx;
  font-weight: normal;
}
.activity .activity-content .card-ul-li .card-ul-li-content {
  width: 5rpx;
  height: 100%;
}
.activity .activity-content .card-ul-li .card-ul-li-content image {
  width: 100%;
  height: 100%;
}
.activity .activity-content .card-ul-li .card-ul-li-right {
  flex: 1;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.activity .activity-content .card-ul-li .card-ul-li-right .ul-li-right-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
}
.activity .activity-content .card-ul-li .card-ul-li-right .ul-li-right-title image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.activity .activity-content .card-ul-li .card-ul-li-right .ul-li-right-status {
  font-size: 26rpx;
  color: #666;
}
.activity .activity-content .card-ul-li .card-ul-li-btn {
  width: 140rpx;
  height: 60rpx;
  background: #dd524d;
  border-radius: 10rpx;
  line-height: 60rpx;
  color: #FFFFFF;
  text-align: center;
  position: absolute;
  right: 24rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 26rpx;
}
.activity .activity-content .card-ul-li .card-ul-li-btn-other {
  background: #c0c0c0;
