.img-pair-box {
  width: 100%;
  display: flex;
}
.img-pair-box .pair-box-left {
  width: 34%;
}
.img-pair-box .pair-box-left .box-left-title {
  width: 100%;
  background-color: #2E3B67;
  color: #FFFFFF;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
}
.img-pair-box .pair-box-left .box-left-li {
  width: 100%;
  height: 230rpx;
  background-color: #FFFFFF;
  text-align: center;
  color: #333333;
  font-weight: bold;
  font-size: 70rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-bottom: 1px solid #D3D3D3;
  box-sizing: border-box;
}
.img-pair-box .pair-box-left .box-left-li image {
  width: 100%;
  height: 100%;
}
.img-pair-box .pair-box-left .box-left-li-click {
  background-color: rgba(0, 0, 0, 0.3);
  opacity: 0.5;
}
.img-pair-box .pair-box-right {
  width: 66%;
  overflow: hidden;
}
.img-pair-box .pair-box-right .box-right-title {
  width: 100%;
  background-color: #c0c0c0;
  color: #2E3B67;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
}
.img-pair-box .pair-box-right .box-right-li {
  width: 50%;
  height: 230rpx;
  border: 1px solid #D3D3D3;
  background-color: #FFFFFF;
  float: left;
  position: relative;
  text-align: center;
  color: #333333;
  font-weight: bold;
  font-size: 70rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
}
.img-pair-box .pair-box-right .box-right-li image {
  width: 100%;
  height: 100%;
}
.img-pair-box .pair-box-right .box-right-li .box-right-li-num {
  position: absolute;
  left: 0;
  top: 0;
  font-weight: 60rpx;
  background-color: rgba(75, 149, 230, 0.5);
  font-weight: bold;
  width: 100%;
  height: 100%;
  color: #FFFFFF;
  text-align: center;
  line-height: 200rpx;
  font-size: 80rpx;
}
.img-pair-box .pair-box-right .box-right-li .box-right-li-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

