page {
  background-color: #FFFFFF;
}
.ele-entry {
  width: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.ele-entry .list-content-box {
  width: 100%;
  background-color: #FFFFFF;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}
.ele-entry .list-content-box .content-box-left {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  overflow: hidden;
  margin-right: 30rpx;
}
.ele-entry .list-content-box .content-box-left image {
  width: 100%;
  height: 100%;
}
.ele-entry .list-content-box .content-box-right {
  width: 66%;
}
.ele-entry .list-content-box .content-box-right .box-right-title {
  color: #333333;
  font-weight: bold;
  font-size: 36rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.ele-entry .list-content-box .content-box-right .box-right-tip {
  color: #666;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.ele-entry .list-content-box .content-box-right .box-right-tip image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.ele-entry .list-content-box .content-box-right .box-right-line {
  width: 100%;
  height: 1rpx;
  background-color: #F0F0F0;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.ele-entry .detail-top-picker {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.ele-entry .ele-content {
  padding: 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d3d3d3;
  margin-bottom: 20rpx;
}
.ele-entry .ele-content .ele-content-title {
  line-height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  border-bottom: 1rpx solid #d3d3d3;
}
.ele-entry .ele-bottom {
  padding: 24rpx;
  box-sizing: border-box;
}
.ele-entry .ele-bottom .ele-bottom-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.ele-entry .ele-bottom .ele-bottom-ul {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  font-size: 26rpx;
  color: #666666;
}
.ele-entry .ele-bottom .ele-bottom-ul .ele-bottom-ul-li {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.ele-entry .ele-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #FFFFFF;
  width: 100%;
}
.ele-entry .ele-btn .ele-btn-li {
  width: 33.3%;
  text-align: center;
}
.ele-entry .ele-btn .ele-btn-li-gray {
  background-color: #c0c0c0;
}
.ele-entry .ele-btn .ele-btn-li-blue {
  background-color: #2E3B67;
}
.ele-entry .ele-btn .ele-btn-li-green {
  background-color: #4cd964;
}

