.all .all-bg {
  width: 100%;
  height: 500rpx;
  background-color: #2E3B67;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}
.all .all-calendar {
  width: 90%;
  margin: auto;
  position: relative;
  z-index: 10;
  margin-top: 5%;
}
.all .all-calendar .all-calendar-box {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0px 2px 10px 0px rgba(108, 143, 197, 0.4);
  overflow: hidden;
}
.all .all-calendar .all-calendar-btn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.all .all-calendar .all-calendar-btn .calendar-btn-li {
  width: 45%;
  text-align: center;
  line-height: 70rpx;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
}
.all .all-calendar .all-calendar-btn .btn-li-red {
  color: #0081ff;
  background-color: #cce6ff;
}
.all .all-calendar .all-calendar-btn .btn-li-olive {
  color: #8dc63f;
  background-color: #e8f4d9;
}
.all .all-calendar .all-calendar-btn .btn-li-grey {
  background-color: #8799a3;
  color: #ffffff;
}
.all .all-calendar .calendar-btn-other {
  width: 100%;
  border-radius: 20rpx;
  margin-top: 30rpx;
  background-image: linear-gradient(45deg, #ff9700, #ed1c24);
  color: #ffffff;
  position: relative;
  padding: 0 30rpx;
  line-height: 150rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.all .all-calendar .calendar-btn-other .btn-other-right {
  position: absolute;
  right: 30rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-color: #fff;
  width: 230rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  color: #dd524d;
  text-align: center;
}
.all .all-calendar .calendar-btn-other .btn-other-right image {
  width: 35rpx;
  height: 35rpx;
}
.all .all-calendar .calendar-btn-other .btn-other-right-gray {
  background-color: #c0c0c0;
  color: #FFFFFF;
}
.all .calcendar-pos {
  position: fixed;
  right: 24rpx;
  bottom: 10%;
  text-align: center;
  color: #dd524d;
  font-size: 26rpx;
  font-weight: bold;
  -webkit-animation: bounce 1s infinite;
          animation: bounce 1s infinite;
}
.all .calcendar-pos image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.all .calcendar-rule {
  width: 100%;
  padding-bottom: 80rpx;
  box-sizing: border-box;
}
.all .calcendar-rule .train-title {
  width: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.all .calcendar-rule .train-title .train-title-box {
  padding-left: 15rpx;
  box-sizing: border-box;
  border-left: 6rpx solid #2E3B67;
}
.all .calcendar-rule .calcendar-rule-text {
  line-height: 40rpx;
  color: #666666;
  font-size: 24rpx;
  width: 100%;
  padding: 0rpx 20rpx;
}

