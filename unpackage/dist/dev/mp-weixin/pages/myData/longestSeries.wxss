.longer {
  width: 100%;
}
.longer .wrap-top {
  width: 100%;
  background-color: #2E3B67;
  padding: 30rpx 0;
  box-sizing: border-box;
  margin-top: -10rpx;
}
.longer .wrap-top .wrap-top-box {
  padding: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
}
.longer .wrap-top .wrap-top-box .top-box-li {
  text-align: center;
  color: #FFFFFF;
}
.longer .wrap-top .wrap-top-box .top-box-li .top-box-li-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.longer .wrap-top .wrap-top-box .top-box-li .top-box-li-num {
  font-size: 30rpx;
}
.longer .wrap-top .wrap-top-tip {
  text-align: center;
  color: #FFFFFF;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: bold;
}
.longer .longer-top {
  width: 100%;
  background-color: #FFFFFF;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 1px 2px 6px 0px rgba(108, 143, 197, 0.3);
}
.longer .longer-top .longer-top-total {
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
  flex-direction: column;
  color: #333333;
  font-size: 40rpx;
  font-weight: bold;
  height: 200rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.longer .longer-top .longer-top-total .top-total-two {
  font-size: 34rpx;
}
.longer .longer-top .longer-top-li {
  width: 100%;
}
.longer .longer-top .longer-top-li .top-li-line {
  width: 100%;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666666;
}
.longer .longer-top .longer-top-li .top-li-line text {
  font-size: 40rpx;
  color: #dd524d;
}
.longer .longer-content {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

