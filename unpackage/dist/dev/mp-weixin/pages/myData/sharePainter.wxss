page {
  width: 100%;
  height: 100%;
}
.share {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  padding: 10% 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.share .share-bg {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.share .share-box {
  background-color: rgba(255, 255, 255, 0.5);
  width: 85%;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding: 60rpx 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.share .share-box .share-box-title {
  text-shadow: 2px 2px 2px grey;
  text-align: center;
  font-size: 45rpx;
  font-weight: bold;
  margin-bottom: 15%;
  line-height: 1.3;
}
.share .share-box .share-box-code {
  width: 300rpx;
  height: 300rpx;
  margin: auto;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
}
.share .share-box .share-box-code image {
  width: 100%;
  height: 100%;
}
.share .share-box .share-box-code-tip {
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.share .share-box .share-box-detail {
  margin-top: 10%;
  font-size: 30rpx;
}
.share .share-box .share-box-detail text {
  font-size: 50rpx;
  color: #dd524d;
}
.share .btn {
  width: 85%;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
  background-color: #2E3B67;
}

